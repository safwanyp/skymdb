{
  "lexicon": 1,
  "id": "com.skymdb.genre",
  "description": "Entity referring to a genre",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "createdAt"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the genre"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Date and time of creation"
          }
        }
      }
    }
  }
}
